<% @sl_yaml[:sections].each do |section| %>
--- #<%= section[:name] %>
# --- #Hogeと書くことでサーバ一覧を区切ることができます
# configはhost_config内の監視項目の設定ファイル名
# hostsは 「IPアドレス[space]ホスト名[space]コメント」です。コメント内にはスペースがあってもかまいません
servers:
  <% section[:servers].each do |server| %>
  - config: <%= server[:config] %>
    hosts:
    <% server[:hosts].each do |host| %>  
      - <%= host[:ip] %> <%= host[:name] %> <%= host[:description] %>
    <% end %>

  <% end %>

<% end %>